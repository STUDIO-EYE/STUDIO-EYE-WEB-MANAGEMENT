{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5" // 또는 "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": ["assets/logo"]
  },
  "include": [
    "src", "src/custom.d.ts"
  ]
}
